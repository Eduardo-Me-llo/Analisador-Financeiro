    return ["Outros", "Outros", "Outros", "N√£o Classificado", CORES_POR_SETOR["Outros"]]

def generate_historical_data(base_date, months=6):
    """Gera dados hist√≥ricos simulados para 6 meses"""
    dates = []
    amounts = []
    for i in range(months):
        date = (base_date - timedelta(days=30*(i+1))).strftime("%Y-%m")
        dates.append(date)
        amounts.append(np.random.uniform(1000, 5000))
    
    return pd.DataFrame({
        "M√™s": dates[::-1],
        "Gastos": amounts[::-1]
    })

